<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignIn_Up.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginRight="13dp"
            android:onClick="closeSignUp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="50dp"
            android:onClick="SignInActivity"
            android:text="Sign in"
            android:textColor="#1A1824"
            android:textSize="16dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="53dp"
        android:text="Letâ€™s complete  creation
of your Notebooks account"
        android:textColor="#1A1824"
        android:textSize="24dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editU_email"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your Email"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="#a3a1a1" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editU_pass"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="numberPassword"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:hint="Enter your password"
            android:padding="5dp"
            android:textColorHint="#a3a1a1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberPassword" />
    </com.google.android.material.textfield.TextInputLayout>





    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="80dp"
        android:text="By signing up you accept the Terms of
Service and Privacy Policy."
        android:textAlignment="center"
        android:textColor="#1A1824"
        android:textSize="14dp" />

    <Button
        android:onClick="btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_next"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16dp" />
</LinearLayout>